<div>
  <%= flash[:notice] %>
  <h1>Books</h1>

  <table>
    <thear>
      <tr>
       <th>Title</th>
       <th>Body</th>
      </tr>
    </thead>
    <% @books.each do |book| %>
    <tbody>
      <tr>
       <td><%= book.title %></td>
       <td><%= book.body %></td>
       <td><%= link_to "Show", book_path(book.id) %></td>
       <td><%= link_to "Edit", book_edit_path(book.id) %></td>
       <td><%= link_to "Destroy", book_destroy_path(book.id), method: :delete, "data-confirm" => "Are you sure?ï¼Ÿ" %></td>
      </tr>
    </tbody>
    <% end %>
  </table>

